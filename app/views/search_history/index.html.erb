<% @page_title = t('flare.search_history.title', :application_name => 'Flare') %>

<div id="content" class="span12">
  <div class="page-header">
    <h1><%=t('flare.search_history.title', :application_name => '')%></h1>
  </div>
  <%- if @searches.blank? -%>
    <div class="alert alert-info"><%= t('flare.search_history.no_history') %></div>
  <%- else -%>
    <div class="row">
      <div class="span10">
        <h3><%= t('flare.search_history.recent') %></h3>
      </div>
      <div class="span2">
        <div class="btn-group table-options">
          <%= link_to t('flare.search_history.clear.action_title'), clear_search_history_path, :method => :delete, :data => { :confirm => t('flare.search_history.clear.action_confirm') }, :class => 'btn btn-clear-search-history' %>
        </div>
      </div>
    </div>
    
    <table class="table table-striped">
      <tbody>
        <%- @searches.each_with_index do |search, index| -%>
          <%= content_tag :tr, :id => "document_#{index + 1}" do %>
            <td class="query"><%= link_to_previous_search(search.query_params) %></td>
          <% end #content_tag %>
        <%- end -%>
      </tbody>  
    </table>
  <%- end -%>
</div>